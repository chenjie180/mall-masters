<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.com.sparknet.dao.OmsOrderDao">
  <resultMap id="PmsProductAttributeWithChildren" type="cn.com.sparknet.dto.PmsProductAttributeCategoryItem" autoMapping="true">
  <id property="id" column="id"/>
  <id property="name" column="name"/>
    <collection property="pmsProductAttributeList"  javaType="List" ofType="cn.com.sparknet.model.PmsProductAttribute">
     <id property="id" column="child_id"/>
  <id property="name" column="child_name"/>
    </collection>
    
  </resultMap>
  <select id="selectOmsOrderListByPage" parameterType="cn.com.sparknet.model.OmsOrder" resultMap="PmsProductAttributeWithChildren">
        select id,order_sn,create_time,member_username,total_amount,
pay_type,source_type,status from  oms_order where order_sn like #{}
and (receiver_name like #{} or receiver_phone like ?) and create_time  
and status=? and order_type=? and source_type=?
  </select>

</mapper>